{% extends 'base.html.twig' %}

{% block title %}Listado de Controles{% endblock %}

{% block css %}
<link href="{{CSS_BASE_URL}}/index.css" type="text/css" rel="stylesheet" media="screen,projection">
{% endblock %}

{% block body %}

<div class="row barraSuperior">
  <div class="col-md-3">
    <h3>Listado de controles</h3>
  </div>
  <div class="col-md-9">
  </div>
  <div class="col-md-12 busqueda">
    <form class="form-inline" action="{{BASE_URL}}controlSalud" method="post">
      <div class="form-group">
        <label class="sr-only" for="nombreyapellido">Nombre y Apellido</label>
        <input type="text" class="form-control" id="nombreyapellido" value="{{nombreyapellido}}" name="nombreyapellido" placeholder="Nombre y apellido...">
      </div>

      <button type="submit" class="btn btn-default">Buscar</button>
      <a href="{{BASE_URL}}controlSalud/create" class="btn btn-success" title="Nuevo Control">Nuevo Control</a>
    </form>
  </div>
</div>

<div class="row">
  <div class="table-responsive">

    <table class="table table-hover">
      <tr>
        <th>Nombre y Apellido </th><th>Edad</th><th>Fecha </th><th>Peso</th><th>vacunas_completas</th><th>maduracion_acorde</th><th>ex_fisico_normal</th><th>ex_fisico_observaciones</th><th>pc</th><th>ppc</th><th>talla</th>
        <th>alimentacion</th><th>observaciones_generales</th><th>usuario cargador</th>
      </tr>
      {% for c in controles %}
      <tr link="{{BASE_URL}}controlSalud/show/{{c.id}}" class="usuarioFila">
        <td>{{c.paciente.nombre}} {{c.paciente.apellido}}</td>
        <td>{{c.edad}}</td>
        <td>{{c.fecha}}</td>
        <td>{{c.peso}}</td>
        <td>{{c.vacunasCompletas}}</td>
        <td>{{c.maduracionAcorde}}</td>
        <td>{{c.exFisicoNormal}}</td>
        <td>{{c.exFisicoObservaciones}}</td>
        <td>{{c.pc}}</td>
        <td>{{c.ppc}}</td>
        <td>{{c.talla}}</td>
        <td>{{c.alimentacion}}</td>
        <td>{{c.observacionesGenerales}}</td>
        <td>{{c.usuario.firstName}} {{c.usuario.lastName}} </td>
        <!--aca iria el usuario que lo cargÃ³-->
        <td>
          <a href="{{BASE_URL}}controlSalud/destroy/{{c.id}}" class="btn-sm btn-danger" title="Eliminar"><i class="fa fa-trash" aria-hidden="true"></i></a>
          <a href="{{BASE_URL}}controlSalud/update/{{c.id}}" class="btn-sm btn-info" title="Editar"><i class="fa fa-pencil" aria-hidden="true"></i></a>
        </td>
      </tr>
      {% endfor %}
    </table>
  </div>

</div>




{% endblock %}

{% block js %}
<script language="JavaScript" src="{{JS_BASE_URL}}/index.js"></script>
{% endblock %}
