{% extends 'base.html.twig' %}

{% block title %}Panel Configuración{% endblock %}

{% block body %}
<div class="text-center">
  <h1>Panel Configuración</h1>
</div>
<div class="row">
  <form action="{{BASE_URL}}configuracion/update" method="post">

    <div class="form-group">
      <label class="col-md-2 control-label" for="nombre_hospital">Nombre Hospital</label>
      <div class="col-md-10">
        <input class="form-control" type="text" name="nombre_hospital" value="{{configuracion.nombreHospital}}" required>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="descripcion_hospital">Descripcion Hospital</label>
      <div class="col-md-10">
        <input class="form-control" type="text" name="descripcion_hospital" value="{{configuracion.descripcionHospital}}" required>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="mail_hospital">Mail Hospital</label>
      <div class="col-md-10">
        <input class="form-control" type="email" name="mail_hospital" value="{{configuracion.mailHospital}}" required>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="elem_pagina">Elementos por pagina</label><br />
      <div class="col-md-10">
        <input class="form-control" type="number" name="elem_pagina" value="{{configuracion.elemPagina}}" required>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="estado_pagina">Modo mantenimiento</label>
      <div class="col-md-10">
        <select class="form-control" name="estado_pagina" required>
          <option value="1" {% if configuracion.estadoPagina == 1 %}selected{% endif %}>Habilitado</option>
          <option value="0" {% if configuracion.estadoPagina == 0 %}selected{% endif %}>Deshabilitado</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">

        <button type="submit" name="" id="submit" class="btn btn-default">Guardar</button>
      </div>
    </div>
  </form>

</div>

{% endblock %}

{% block js %}
<script language="JavaScript" src="{{JS_BASE_URL}}/create.js"></script>
{% endblock %}
